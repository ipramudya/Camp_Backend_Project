<!-- asumsi kita berada di dalam directory views -->
<% layout('layouts/boilerplates.ejs') %>
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <img src="<%= campgrounds.image %> " class="card-img-top" alt="image">
                <div class="card-body">
                    <h5 class="card-title">
                        <%= campgrounds.title %>
                    </h5>
                    <p class="card-text">
                        <%= campgrounds.description %>
                    </p>
                </div>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item text-muted">
                        <%= campgrounds.location %>
                    </li>
                    <li class="list-group-item">$<%= campgrounds.price %> <small>per Night</small></li>
                </ul>
                <div class="card-body">
                    <a class="card-link btn btn-primary" href="/campgrounds/<%=campgrounds['_id']%>/edit">Edit</a>
                    <form class="d-inline" action="/campgrounds/<%=campgrounds['_id']%>?_method=DELETE" method="POST">
                        <button class="btn btn-danger">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>