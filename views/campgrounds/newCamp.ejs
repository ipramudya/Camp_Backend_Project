<!-- asumsi kita berada di dalam directory views -->
<% layout('layouts/boilerplates.ejs') %>
    <div class="row">
        <h1 class="text-center">New Campgrounds</h1>
        <div class="col-6 offset-3">
            <form action="/campgrounds" method="POST" novalidate class="custom-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="campground[title]" required>
                    <%- include('../partials/validateMessage.ejs') %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="campground[location]" required>
                    <%- include('../partials/validateMessage.ejs') %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="campground[image]" required>
                    <%- include('../partials/validateMessage.ejs') %>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Campground Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" class="form-control" id="price" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="campground[price]" required>
                        <%- include('../partials/validateMessage.ejs') %>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" style="height: 120px"
                        name="campground[description]" required></textarea>
                    <%- include('../partials/validateMessage.ejs') %>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Submit</button>
                </div>
            </form>
        </div>
    </div>
