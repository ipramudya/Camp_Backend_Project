<!-- asumsi kita berada di dalam directory views -->
<% layout('layouts/boilerplates.ejs') %>
    <h1>Campgrounds</h1>
    <!-- <h3><a href="/campgrounds/new">Add new campground</a></h3> -->
    <% for(let camp of campgrounds){ %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="" src="<%= camp.image %> ">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= camp.location %>
                            </small>
                        </p>
                        <a class="btn btn-dark" href="/campgrounds/<%=camp['_id']%>">View location</a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>